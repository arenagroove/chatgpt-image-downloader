{
  "manifest_version": 2,
  "name": "ChatGPT Image Downloader",
  "version": "2.1.1",
  "description": "Download all generated images from your ChatGPT Images hub with one click. Select specific images, view thumbnails, and get detailed error reports. Fully local and privacy-safe.",
  "permissions": [
    "https://chatgpt.com/*",
    "webRequest",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["panel.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-image-downloader@lessrain.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}