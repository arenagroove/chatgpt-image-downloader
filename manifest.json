{
  "manifest_version": 2,
  "name": "ChatGPT Image Downloader",
  "version": "1.3.0",
  "description": "Download all your generated images from your ChatGPT Library with one click. Fully local and privacy-safe.",
  "permissions": [
    "https://chatgpt.com/*",
    "webRequest",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["panel.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  }
}